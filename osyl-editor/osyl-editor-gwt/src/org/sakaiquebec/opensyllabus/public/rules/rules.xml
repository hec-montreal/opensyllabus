<schema>
	<element name="CO">
		<!-- restriction pattern is a regexp pattern based on the value of attribute type -->
		<attribute name="type" restrictionpattern=".*" />
		
		<!-- list of element COUnit allowed at this level -->
		<element name="COUnit">
			<attribute name="type" restrictionpattern="presentation" />
			<element name="COResourceProxy">
				<attribute name="type" restrictionpattern="text|document|url" />
			</element>
			<element name="COContentRubric">
			    <attribute name="type" restrictionpattern="undefined|description|objectives|learningstrat"/>
			</element>
		</element>
		<element name="COUnit">
			<attribute name="type" restrictionpattern="contactinfo" />
			<element name="COResourceProxy">
				<attribute name="type" restrictionpattern="contactinforesource" />
			</element>
			<element name="COContentRubric">
			    <attribute name="type" restrictionpattern="undefined|coordinators|lecturers|teachingassistants|secretaries"/>
			</element>
		</element>
		<element name="COUnit">
			<attribute name="type" restrictionpattern="learningmat" />
			<element name="COResourceProxy">
				<attribute name="type" restrictionpattern="text|document|url|citation" />
			</element>
			<element name="COContentRubric">
			    <attribute name="type" restrictionpattern="undefined|misresources|bibliography|tools|pastexams|complbibres"/>
			</element>
		</element>
		<!-- list of element structureElement allowed at this level -->
		<element name="COStructure">
			<attribute name="type" restrictionpattern="evaluations" />
			<!-- list of element contentUnit allowed at this level (only one at the moment) -->
			<element name="COUnit">
				<attribute name="type" restrictionpattern="evaluation" />
				<element name="COResourceProxy">
					<attribute name="type" restrictionpattern="text|document|url|citation|assignment"/>
				</element>
				<element name="COContentRubric">
				    <attribute name="type" restrictionpattern="undefined|description|evalcriteria|evalpreparation|evaldetails|evalsubproc|misresources"/>
				</element>
			</element>
		</element>
		
		<!-- list of element structureElement allowed at this level -->
		<element name="COStructure">
			<attribute name="type" restrictionpattern="lectures" />
			<!-- list of element contentUnit allowed at this level (only one at the moment) -->
			<element name="COUnit">
				<attribute name="type" restrictionpattern="lecture" />
				<element name="COResourceProxy">
					<attribute name="type" restrictionpattern="text|document|url|citation" />
				</element>
				<element name="COContentRubric">
				    <attribute name="type" restrictionpattern="undefined|instructions|description|objectives|learningstrat|misresources|ressinclass|readinglist|exercises"/>
				</element>
			</element>
		</element>
	</element>
</schema>