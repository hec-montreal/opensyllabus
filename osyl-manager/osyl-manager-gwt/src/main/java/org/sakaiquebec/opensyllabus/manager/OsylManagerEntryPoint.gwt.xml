<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0.3//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.0.3/distro-source/core/src/gwt-module.dtd">

<module rename-to='OsylManagerEntryPoint'>

	<!-- Inherit the core Web Toolkit stuff.                        -->
	<inherits name='com.google.gwt.user.User' />
	<inherits name='com.google.gwt.xml.XML' />

	<!-- to avoid error from common-shared -->
	<inherits name='org.gwt.mosaic.Mosaic' />
	<inherits name='org.gwt.mosaic.actions.Actions' />

	<!-- Inherit the default GWT style sheet.  You can change       -->
	<!-- the theme of your GWT application by uncommenting          -->
	<!-- any one of the following lines.                            -->
	<inherits name='com.google.gwt.user.theme.standard.Standard' />
	
	<!-- Other module inherits                                      -->
	<inherits name='org.sakaiquebec.opensyllabus.shared' />

	<extend-property name="locale" values="fr_CA" />
	<extend-property name="locale" values="es" />

	<!-- Specify the app entry point class.                         -->
	<entry-point
		class='org.sakaiquebec.opensyllabus.manager.client.OsylManagerEntryPoint' />
	<inherits name="org.sakaiquebec.opensyllabus.manager.OsylManagerEntryPoint" />

	<!-- Specify the app servlet path. -->
	<!-- now moved to web.xml -->

	<!-- Specify the application specific style sheet.              -->
	<stylesheet src='OsylManager.css' />

</module>
