<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.sakaiquebec.opensyllabus.shared.model.COConfigSerialized" table="osyl_co_config">
        <id name="configId" type="string">
        	<!--  Note: this ID needs to be compatible with a Sakai UUID, which is 32 characters long -->
            <column name="CONFIG_ID" length="32"/>
            <generator class="uuid" />
        </id>
       
        <property name="configRef" type="text">
            <column name="CONFIGREF" />
        </property>
        
        
 	</class>


</hibernate-mapping>